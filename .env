# Database Configuration (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./idea_engine.db

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TIMEOUT=90

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Research Agent Configuration (Simplified)
SCRAPER_MAX_RETRIES=3
SCRAPER_RATE_LIMIT_DELAY=2

# Web Search Configuration (Optional)
SERPAPI_API_KEY=your_serpapi_key_here

# Scoring Configuration
SCORING_FACTORS_CONFIG=config/scoring_factors.yaml
SCORING_BATCH_SIZE=3
SCORING_PARALLEL_WORKERS=2

# Report Generation
REPORT_OUTPUT_DIR=./reports
REPORT_FORMATS=pdf,markdown

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security (Change in production!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Feature Flags
ENABLE_IDEA_GENERATION=true
ENABLE_RESEARCH_AGENT=true
ENABLE_SCORING_ENGINE=true
ENABLE_REPORT_GENERATION=true

# Performance Tuning
MAX_CONCURRENT_IDEAS=50
MAX_RESEARCH_DEPTH=3
CACHE_TTL_SECONDS=3600
