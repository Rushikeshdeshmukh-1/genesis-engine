# Database Configuration
DATABASE_URL=postgresql://postgres:postgres_password@localhost:5432/idea_engine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_DB=idea_engine

# RabbitMQ Configuration
RABBITMQ_URL=amqp://rabbitmq:rabbitmq_password@localhost:5672/
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq_password


# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=idea-engine-artifacts
MINIO_USE_SSL=false

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=idea-engine-tasks

# Ollama LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=300

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Research Agent Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
SCRAPER_MAX_RETRIES=3
SCRAPER_RATE_LIMIT_DELAY=2

# Web Search Configuration (Optional - for enhanced research)
SERPAPI_API_KEY=your_serpapi_key_here
GOOGLE_TRENDS_ENABLED=true

# Scoring Configuration
SCORING_FACTORS_CONFIG=config/scoring_factors.yaml
SCORING_BATCH_SIZE=10
SCORING_PARALLEL_WORKERS=4

# Report Generation
REPORT_OUTPUT_DIR=./reports
REPORT_FORMATS=pdf,markdown
REPORT_TEMPLATE_DIR=./templates

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security (Change in production!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Feature Flags
ENABLE_IDEA_GENERATION=true
ENABLE_RESEARCH_AGENT=true
ENABLE_SCORING_ENGINE=true
ENABLE_REPORT_GENERATION=true
ENABLE_WORKFLOW_ORCHESTRATION=true

# Performance Tuning
MAX_CONCURRENT_IDEAS=50
MAX_RESEARCH_DEPTH=3
CACHE_TTL_SECONDS=3600
